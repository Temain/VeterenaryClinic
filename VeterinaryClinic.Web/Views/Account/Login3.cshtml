@using VeterinaryClinic.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Выполнить вход";
    Layout = null;
}

<link href="~/Content/login.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Montserrat:100,200,300,400,500,600,700,800,900" rel="stylesheet">

<div class="container">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "signIn active-dx", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3>Добро пожаловать!</h3>
        <button class="fb" type="button">Войти с Facebook</button>
        <p>- или -</p>
        <input type="email" placeholder="Введите логин" autocomplete='off' required />
        <input type="password" placeholder="Введите пароль" required />

        @*<button class="form-btn sx back" type="button">Back</button>*@
        <button class="form-btn dx" type="submit">Войти</button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")  
    <script src="~/Scripts/login.js"></script>
}